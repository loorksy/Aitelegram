# ===================================
# AI Agent Factory - Environment Variables
# Copy this file to .env and fill in your values
# ===================================

# ===================================
# REQUIRED - Application will not start without these
# ===================================

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=
# Encryption key for sensitive data (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-byte-base64-encoded-key

# JWT Secret for authentication (use strong random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key

# ===================================
# DATABASE - Required for persistence
# ===================================

# PostgreSQL connection (used by backend service)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@db:5432/agent_factory

# PostgreSQL password (used by docker-compose)
POSTGRES_PASSWORD=postgres

# ===================================
# CACHE - Optional but recommended
# ===================================

# Redis connection URL
REDIS_URL=redis://redis:6379

# ===================================
# URLS - Configure for your domain
# ===================================

# Backend API base URL (your domain)
BASE_URL=https://api.lork.cloud

# Frontend API URL (used during build)
VITE_API_URL=https://api.lork.cloud/api

# ===================================
# TELEGRAM STARS PAYMENTS - Optional
# ===================================

# Telegram Bot Token (from @BotFather)
# Required only if you want to enable Telegram Stars payments
MASTER_BOT_TOKEN=8464176187:AAEiveGfcEjCrrmkdq1JTkNVx5vDhbyMe_U

# Webhook secret for Telegram updates (optional security)
WEBHOOK_SECRET=

# Payment mode: REAL or MOCK
PAYMENT_MODE=REAL

# Stars to credits conversion rate (1 Star = X Credits)
STARS_TO_CREDITS_RATE=10

# ===================================
# APPLICATION SETTINGS
# ===================================

# Admin Telegram handle for support
ADMIN_HANDLE=@aswadtr

# Credits cost per AI pipeline run
PIPELINE_CREDIT_COST=10

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MIN=30
